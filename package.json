{
  "name": "iframe-rpc-monorepo",
  "private": true,
  "version": "0.1.6",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "vite",
    "build": "npm run build -w iframe-rpc-server && npm run build -w iframe-rpc-client",
    "preview": "vite preview",
    "test": "tsc -p tsconfig.json && vitest run",
    "test:watch": "vitest",
    "lint": "eslint --ext .ts ./shared ./packages ./tests ./demo",
    "lint:fix": "eslint --ext .ts ./shared ./packages ./tests ./demo --fix",
    "publish:all": "npm run build && npm publish -w iframe-rpc-server && npm publish -w iframe-rpc-client",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.56.0",
    "husky": "^9.0.11",
    "typescript": "~5.9.3",
    "vite": "^7.1.7",
    "vitest": "^2.1.4"
  }
}
